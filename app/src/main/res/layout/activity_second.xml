<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/second_activity_onCreate_function"
        android:text="OnCreate() calls:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/second_activity_onCreate_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/second_activity_onCreate_function"
        />

    <TextView
        android:id="@+id/second_activity_onStart_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OnStart() calls:"
        android:layout_below="@+id/second_activity_onCreate_function"/>

    <TextView
        android:id="@+id/second_activity_onStart_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/second_activity_onStart_function"
        android:layout_below="@+id/second_activity_onCreate_count_tv"
        />

    <TextView
        android:id="@+id/second_activity_onResume_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OnResume() calls:"
        android:layout_below="@+id/second_activity_onStart_function"/>

    <TextView
        android:id="@+id/second_activity_onResume_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/second_activity_onResume_function"
        android:layout_below="@+id/second_activity_onStart_count_tv"
        />

    <TextView
        android:id="@+id/second_activity_onRestart_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OnRestart() calls:"
        android:layout_below="@+id/second_activity_onResume_function"/>

    <TextView
        android:id="@+id/second_activity_onRestart_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/second_activity_onRestart_function"
        android:layout_below="@+id/second_activity_onResume_count_tv"
        />

    <Button
        android:id="@+id/first_activity_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back to First Activity"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>


</RelativeLayout>